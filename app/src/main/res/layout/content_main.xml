<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dev.journey.toolkitapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <dev.journey.uitoolkit.view.FlexibleTabLayout
        android:id="@+id/flexibleTabLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffbfbfbf"></dev.journey.uitoolkit.view.FlexibleTabLayout>

    <android.support.design.widget.TabLayout
        android:layout_marginTop="10dp"
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffbfbfbf"></android.support.design.widget.TabLayout>
</LinearLayout>
